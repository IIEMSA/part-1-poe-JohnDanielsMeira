@model IEnumerable<EventEaseMJDST10356144.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h1>Bookings</h1>

<form asp-action="Index" method="get">
    <div class="form-group">
        <input type="text" name="searchString" class="form-control" placeholder="Search Bookings" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Venue</th>
            <th>Event</th>
            <th>Booking Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var booking in Model) 
{
        <tr>
            <td>@booking.Id</td>
            <td>@booking.Venue?.VenueName</td>
            <td>@booking.Event?.EventName</td>
            <td>@booking.BookingDate.ToString("yyyy-MM-dd")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@booking.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@booking.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@booking.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
